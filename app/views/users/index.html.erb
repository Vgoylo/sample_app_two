<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for(user) %>
      <%= link_to user.name, user %>
       <% if current_user == user || current_user.admin_role? %>
       <%= link_to '|  delete' %>
      <% end %>

    </li>
  <% end %>
</ul>
